{
    "name": "keboola/kbc-project-backup",
    "description": "Data takeout",
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/keboola/storage-api-cli"
        }
    ],
    "require": {
        "php": "^7.4",
        "symfony/serializer": "^5.3",
        "symfony/options-resolver": "^5.3",
        "keboola/syrup-php-client": "^5.5",
        "keboola/php-component": "^8.3"
    },
    "require-dev": {
        "keboola/storage-api-client": "^10.20",
        "keboola/coding-standard": "^11.0",
        "phpstan/phpstan": "^0.12.90",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\BackupProject\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\BackupProject\\Tests\\": "tests/phpunit"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests": [
            "@tests-phpunit"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    }
}
